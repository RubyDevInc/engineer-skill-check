<div class="container">
  <div class="col-10">
    <div class="new-article-wrap py-5 m-5 border border-2 rounded"> 
      <%= form_with model: @article, local: true do |f| %>
        <div class="col-10 pb-2 d-flex align-items-center border-bottom border-2">
          <h1 class="fs-3 fw-bold">お知らせ</h1>
          <%= button_tag(type: "submit", class: "btn btn-primary ms-auto") do %>
            保存<i class="bi bi-file-earmark-plus-fill ms-1"></i>
          <% end %>
        </div>
        <div class="row pb-4 mt-5 mb-4">
        <div class="col-2">
          <%= f.label :title, class:"form-label fw-bold" %>
        </div>
        <div class="col-8">
          <%= f.text_field :title, class: "form-control w-100 py-3", placeholder: "タイトル" %>
        </div>
      </div>
      <div class="row">
        <div class="col-2">
          <%= f.label :content, class: "form-label fw-bold" %>
        </div>
        <div class="col-8">
          <%= f.text_area :content, class: "form-control w-100", rows: 10 %>
        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>

