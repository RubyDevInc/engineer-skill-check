<div class="article_space">
  <% if flash.notice.present? %>
    <p><%= flash.notice %></p>
  <% end %>
  <p class="article_index">
    <%= link_to '一覧に戻る', articles_path, class: 'btn' %>
    <% if current_user.news_posting_auth %>
      <% if @article.employee == current_user %>
        <%= link_to '編集', edit_article_path(@article), class: 'btn' %>
      <% end %>
    <% end %>
  </p>
  <div class="row">
    <span class="label">タイトル</span>
    <span class="article_value"><%= @article.title %></span>
  </div>
  <div class="row">
    <span class="label">内容</span>
    <span class="article_content"><%= @article.content %></span>
  </div>
</div>
