<div class="container mt-5">
  <div class="d-flex justify-content-end mb-3">
    <p class="employee_index"><%= link_to '一覧に戻る', employees_path, class: 'btn btn-secondary' %></p>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-4">
      <div class="card p-5">
        <div class="text-center">
          <%= image_tag "https://placehold.jp/150x150.png", class: "avatar-image rounded-circle overflow-hidden mb-3", style: "object-fit: cover; width: 150px; height: 150px;" %>
          <h3 class="card-title mb-3"><%= "#{@employee.last_name} #{@employee.first_name}" %></h3>
        </div>
      </div>
    </div>
    <div class="col-sm-12 col-md-8">
      <div class="card p-3">
        <div class="card-body">
          <%= render partial: 'form', locals: { employee: @employee, profile: @profile } %>
        </div>
      </div>
    </div>
</div>
