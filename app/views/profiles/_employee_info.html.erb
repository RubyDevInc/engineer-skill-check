<div class="container">
  <div class="row mb-3">
    <span class="label col-3">社員番号</span>
    <span class="col-9"><%= employee.number %></span>
  </div>

  <div class="row mb-3">
    <span class="label col-md-3">氏名</span>
    <span class="col-9"><%= "#{employee.last_name} #{employee.first_name}" %></span>
  </div>

  <div class="row mb-3">
    <span class="label col-3">入社年月日</span>
    <span class="col-9"><%= employee.date_of_joining %></span>
  </div>

  <div class="row mb-3">
    <span class="label col-3">部署</span>
    <span class="col-9"><%= employee.department.name %></span>
  </div>

  <div class="row mb-3">
    <span class="label col-3">オフィス</span>
    <span class="col-9"><%= employee.office.name %></span>
  </div>
</div>
