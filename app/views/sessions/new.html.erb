<div class="session">
  <%= form_for(:employees, url: login_path, html: { class: "needs-validation" }) do |f| %>
    <div class="form-group">
      <%= f.label "アカウント", class: "form-label" %>
      <%= f.text_field :account, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.label "パスワード", class: "form-label" %>
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>
    <% if flash[:alert] %>
      <div class="form-group">
        <p class="text-danger"><%= flash[:alert] %></p>
      </div>
    <% end %>
    <div class="row justify-content-center">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

